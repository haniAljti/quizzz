<div class="default-page">
    <section class="main category">

        <div class="col d-flex flex-column">
            <div class="quiz-element">Quiz</div>

            <div class="quiz-element-container">
                <div class="quiz-element-name">
                    <%= quiz.name %>
                </div>
                <div class="d-flex flex-row">
                    <a href="/quiz/<%= quiz.id %>/edit"><i class="fas fa-pen edit"></i></a>
                    <a href="/quiz/<%= quiz.id %>/delete"><i class="fa fa-solid fa-trash delete"></i></a>
                </div>
            </div>

            <div class="quiz-element-description">
                <%= quiz.description %>
            </div>

            <div class="add-new">
                <a href="/quiz/<%= quiz.id %>/question/new"><i class="fa fa-solid fa-plus"></i>Neue Frage hinzuf√ºgen</a>
            </div>

            <% quiz.questions.forEach(function(question){ %>
                <div class="row d-flex quizzz-container">
                    <div class="col-sm-12 col-md-6 text-content category-content">
                        <div class="category-info">
                            <div class="name"><%= question.question %></div>
                        </div>
                        <a class="next" href="/question/<%= question.id %>">
                            <i class="fa fa-solid fa-chevron-right"></i>
                        </a>
                        <div class="icons">
                            <a href="/question/<%= question.id %>/edit"><i class="fas fa-pen edit"></i></a>
                            <a href="/question/<%= question.id %>/delete"><i class="fa fa-solid fa-trash delete"></i></a>
                        </div>
                    </div>
                </div>

                
                <% }); %>
        </div>

    </section>

</div>