<link href="https://fonts.googleapis.com/css?family=Lato:300,400" rel="stylesheet">
<script href="/assets/js/quiz/new.js"></script>

<div>
    <div class="col d-flex justify-content-center">
        <form class="form-container" id="questions-container" action="/quiz" method="post">
            <div class="form-group">
                <label class="form-label" for="name">Quiznamen</label>
                <input class="form-input" maxlength="50" type="text" id="name" name="name">
            </div>

            <div class="form-group">
                <label class="form-label" for="description">Bescreibung</label>
                <input class="form-input" maxlength="50" type="text" id="description" name="description">
            </div>

            <div class="form-group">
                <label class="col-form-label-lg">Kategorie</label>
                <select class="form-select form-select" name="category">
                    <% categories.forEach(function(category){ %>
                        <option value="<%= category.id %>">
                            <%= category.name %>
                        </option>
                        <% }); %>
                </select>
            </div>


            <div class="form-button-container">
                <button type="submit" class="btn btn-warning btn-lg">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>