<div>
    <div class="col d-flex justify-content-center header">
        <div class="header-info">
            <div class="name"><%= user.name %></div>
            <div class="icons">
                <a href="/user/<%= user.id %>/edit"><i class="fas fa-pen edit"></i></a>
                <a href="/user/<%= user.id %>/delete"><i class="fa fa-solid fa-trash delete"></i></a>
                
            </div>
        </div>
    </div>
    <div class="col d-flex justify-content-center">
        <form class="form-container" action="/user/<%=user.id%>/update" method="post">
            <div class="form-group">
                <label class="form-label" for="name">Spitzname</label>
                <input class="form-input" type="text" id="name" name="name" value="<%= user.name %>" >
            </div>

            <div class="form-group">
                <label class="form-label" for="password">Passwort</label>
                <input class="form-input" type="password" id="password" name="passwordHash">
            </div>

            <div class="form-group">
                <label class="form-label" for="birthday">Geburtstag</label>
                <input class="form-input" type="date" id="birthday" name="birthday" value="<%= user.birthday %>" >
            </div>

            <div class="form-button-container">
                <button type="submit" class="btn btn-warning btn-lg">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>